<?xml version="1.0"?>
<launch>
    <!-- 
    注意: 由于这不是一个标准的ROS包，roslaunch可能无法直接使用
    推荐使用以下方式启动相机TF变换器:
    
    方法1: 直接运行Python脚本 (推荐)
    python3 /root/workspace/tf_transform/mavros_pose_to_tf.py
    
    方法2: 使用启动脚本
    cd /root/workspace/tf_transform && ./start_camera_tf.sh
    
    方法3: 使用静态TF (备用)
    roslaunch /root/workspace/tf_transform/static_tf_publishers.launch
    -->
    
    <node name="camera_tf_info" pkg="rospy" type="rospy" 
          args="-c 'import rospy; rospy.loginfo(\"请使用: python3 /root/workspace/tf_transform/mavros_pose_to_tf.py\"); rospy.spin()'" 
          output="screen"/>
</launch>
    
    <!-- 备选方案: 静态变换 (如果动态TF有问题时使用) -->
    <!-- 取消注释以下行来使用静态变换 -->
