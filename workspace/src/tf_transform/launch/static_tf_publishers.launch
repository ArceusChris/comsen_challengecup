<?xml version="1.0"?>
<launch>
    <!-- 仅静态变换版本 - 用于测试或当动态TF不可用时 -->
    
    <!-- 从 map 到无人机 base_link 的静态坐标变换 -->
    <!-- iris_0: spawn位置 (2.5, 2.7, 1.3) -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_iris_0_tf" 
          args="2.5 2.7 1.3 0 0 0 map iris_0/base_link"/>
    
    <!-- standard_vtol_0: spawn位置 (2.3, 0.4, 1.3) -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_vtol_0_tf" 
          args="2.3 0.4 1.3 0 0 0 map standard_vtol_0/base_link"/>
    
    <!-- 为 iris_0 发布相机坐标系变换 -->
    <!-- RealSense 前视相机: 机体坐标系 -> 相机坐标系(x右y下z前) -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="iris_0_realsense_tf" 
          args="0.1 0 0 0 0.7071068 0 0.7071068 iris_0/base_link iris_0/stereo_camera_frame"/>
    
    <!-- 下视相机: 机体坐标系 -> 下视相机坐标系(x右y下z朝地面) -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="iris_0_camera_tf" 
          args="0 0 -0.03 0 -0.5 0.5 0.5 iris_0/base_link iris_0/camera_link"/>
    
    <!-- 为 standard_vtol_0 发布相机坐标系变换 -->
    <!-- 下视相机: 机体坐标系 -> 下视相机坐标系(x右y下z朝地面) -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="vtol_0_camera_tf" 
          args="0 0 -0.03 0 -0.5 0.5 0.5 standard_vtol_0/base_link standard_vtol_0/camera_link"/>
</launch>
